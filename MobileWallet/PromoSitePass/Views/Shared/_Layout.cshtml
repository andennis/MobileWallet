<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")



    <style>
        html{
            font-size:9.4px;
        }

        body {
            padding-top: 0;
            padding-bottom: 0;
        }

        .container {
            max-width: 100%;
            padding-right: 0px;
            padding-left: 0px;
        }

        .body-content {
            padding-right: 0px;
            padding-left: 0px;
        }

        ::selection {
            background-color: #ffff57;
        }

        /*main menu*/
        .menu {
            margin: 0 auto;
            padding: 0;
            font-family: "Segoe UI", Helvetica, Arial, Sans-Serif;
            font-size: 1.8rem;
        }

        .menuItem {
            font-size: 1.7rem;
            padding: 0 0;
            border-bottom: 1px solid #444;
        }

    .menu ul {
        border: 0;
        float: left;
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: left;
    }

    .menu ul li {
        display: block;
        position: relative;
        float: left;
        border: 0;
        float: left;
        margin: 0;
        padding: 0 5px 0 0;
    }

    .menu li ul {
        display: none;
    }

    .menu ul li a {
        display: block;
        text-decoration: none;
        color: #95a0bb;
        padding: 5px 10px 5px 10px;
    }

        .menu ul li a.active {
            font-weight: bold;
        }

        .menu ul li a:hover {
            color: white;
            text-decoration: none;
            background-color: #ffd800;
        }

            .menu ul li a.active:hover {
                /*color: #006d8c;
                background: #fadd1e;*/
            }

    .menu li:hover ul {
        display: block;
        position: absolute;
    }

        .menu li:hover li {
            float: none;
            border-bottom: 1px solid #444;
            padding: 0 0 0 0;            
        }

        li:hover a {
            /*background: #5d5d5d;*/
        }

        .menu li:hover li a {
            background: rgba(0,0,0,0.8);
            color: white;
        }

            .menu li:hover li a:hover {
                background-color: black;
                color: #ffd800;
            }

        .logInButton {
            background-color: #aeb6cb;
            float: right;
            color: white;
            padding: 0px 4px;
            font-size: 1.8rem;
            font-family: "Segoe UI", Helvetica, Arial, Sans-Serif;
            margin-right: 90px;
            margin-top: 63px;
        }

        .logInButton:hover {
            cursor: pointer;
            background-color: #ffd800;
            color: white;
            text-decoration: none;
        }

        .footer {
            color: #87898f;
            -ms-opacity: 0.5;
            opacity: 0.5;
            font-size: 1.6rem;
            font-family: "Segoe UI", Helvetica, Arial, Sans-Serif;
        }

        .footerIcon {
            height: 16px;
        }

    .footerTable {
        margin-left: auto;
        margin-right: auto;
        color: #95a0bb;
        font-family: "Segoe UI", Helvetica, Arial, Sans-Serif;
        font-size: 1.6rem;
        text-align: left;
    }

        .footerTd1 {
            width: 22px;
        }

        .footerTd2 {
            padding: 0 5px 0 40px;
        }

    .blueLine {
        position: relative;
        width: 100%;
        height: 3px;
        background-color: #0072c6;
    }

</style>
</head>
    <body>
        <div style="background-color: #f2f4f8;">
            <div style="margin-right: auto; margin-left: auto; width: 100%; -moz-min-width: 640px; -ms-min-width: 640px; -o-min-width: 640px; -webkit-min-width: 640px; min-width: 640px; max-width: 1000px; text-align: left; height: 94px;">
                <a href="~/Home/MainPage">
                    <img src="/Images/MainPage/PassLightLogo.png" style="margin-top: 8px; width: 175px;">
                </a>
                <div class="menu" style="position: absolute; top: 54px; z-index: 1000;">
                    <ul>
                        <li><a href="~/Home/MainPage" class="active">Главная</a></li>
                        <li>
                            <a href="#">Стратегии</a>
                            <ul style="width: 175px;">
                                <li class="menuItem"><a href="~/Home/CouponsStrategy">Купоны</a></li>
                                @*<li class="menuItem"><a href="">Накопительная карта</a></li>*@
                                <li class="menuItem"><a href="~/Home/MembershipStrategy">Карты клиента</a></li>
                                <li class="menuItem"><a href="~/Home/StampStrategy">Штамп карты</a></li>
                                <li class="menuItem"><a href="~/Home/EventTicketsStrategy">Билеты на событие</a></li>
                                <li class="menuItem"><a href="~/Home/TransitTicketsStrategy">Билеты на проезд</a></li>
                                <li class="menuItem"><a href="~/Home/BusinessCardStrategy">Визитные карты</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Инструменты</a>
                            <ul style="width: 163px;">
                                <li class="menuItem">@Html.ActionLink("Дизайнер пассов", "EmptyCardDesigner", "Home", new { target = "blank" })</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                        @*<li><a href="#">Регистрация</a></li>*@
                    </ul>
                </div>
                @*<p class="inputButton">Войти</p>*@
                <a class="logInButton" href="~/Account/Login" target="_blank">Войти</a>
            </div>
        </div>
        
        @*<div class="blueLine"></div>*@

        <div class="container body-content">
            @RenderBody()
        </div>

        @*<div class="blueLine"></div>*@
        @*<div style="height: 170px; margin-right: auto; margin-left: auto; width: 100%; text-align: center; background-color: #f2f4f8;">
            <br />
            
            <br />
            <p class="footer">2014 Passlight</p>
        </div>*@

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
