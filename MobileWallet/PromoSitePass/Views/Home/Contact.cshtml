        <h1>Контакты</h1>
        <br/>
        <div class="sendMessageForm col-sm-6 col-xs-12 wow fadeInLeft" data-wow-duration="1.5s">
            <h2>Напишите нам письмо</h2>
            <section id="sendMessageForm" style="margin-left: auto; margin-right: auto; width: 100%;">
                @using (Html.BeginForm("Contact", "Home"))
                {
                    @Html.AntiForgeryToken()
                    @*@Html.ValidationSummary(true)*@
                    <div class="controlGroup">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control messageFormInput", placeholder = "Имя" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="controlGroup">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control messageFormInput", placeholder = "E-mail" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="controlGroup">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control messageFormInput", placeholder = "Телефон" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber)
                    </div>
                    <div class="controlGroup">
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control messageFormInput", placeholder = "Компания" })
                        @Html.ValidationMessageFor(m => m.CompanyName)
                    </div>
                    <div class="controlGroup">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control messageFormInput", placeholder = "Текст письма", rows = "5" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>

                    <input type="submit" value="Отправить" class="sendEmailButton" />
                }
            </section>
