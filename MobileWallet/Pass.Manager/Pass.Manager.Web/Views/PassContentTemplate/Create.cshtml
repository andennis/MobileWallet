@model PassContentTemplateViewModel

@{
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

@Html.PartialEx("_Form", Model)

@section Actions
{
    @Html.FormActionSubmit("buttonCreate", "Create", Url.Action("Create"))
    @Html.FormActionButton("buttonCancel", "Cancel", !string.IsNullOrEmpty(Model.RedirectUrl) ? Model.RedirectUrl : Url.Action("Edit", "PassProject", new{id = Model.PassProjectId}))
}

