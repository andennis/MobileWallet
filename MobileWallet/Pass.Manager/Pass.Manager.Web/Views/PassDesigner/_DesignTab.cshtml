@model Pass.Manager.Web.Models.GeneralPassTemplate.PassTemplateViewModel

<div class="clearBlock"></div>
<br />
<div class="explanations">
    Вы можете настроить внешний вид пасса, изменив цвета и загрузив собственные изображения ниже.
    Чтобы выбрать цвет из палитры цветов нажмите на значок
    <img src="~/Images/createCard/color.png" />
</div>
<br>

<!--Background color picker-->
<div id="divBackgroundColor" class="designItemBlock colorPickerBlock">
    <p class="labelInput labelInputDesign">
        <a data-toggle="tooltip" title="Выберите цвет фона пасса из палитры цветов или введите hex код цвета (например #BDC3C7)">Цвет фона<span class="spanRed">*</span></a>
    </p>
    @*<input id="backColorPicker" class="colorPickerInput" type="color" value="#@Model.BackgroundColor.Name.Substring(2)" data-hex="true" onchange="javascript:document.getElementById('divPassBody').style.backgroundColor=document.getElementById('backColorPicker').value;" /><br />*@
    <input id="backColorPicker" class="colorPickerInput" type="color" value="@Model.BackgroundColor" name="BackgroundColor" data-hex="true" onchange="javascript:document.getElementById('divPassBody').style.backgroundColor=document.getElementById('backColorPicker').value;" /><br />
</div>
<br>

<!--Label text color picker-->
<div id="divLabelTextColor" class="designItemBlock colorPickerBlock">
    <p class="labelInput labelInputDesign">
        <a data-toggle="tooltip" title="Выберите цвет заголовков полей из палитры цветов или введите hex код цвета (например #000000)">Цвет заголовков<span class="spanRed">*</span></a>
    </p>
    @*<input id="labelColorPicker" class="colorPickerInput" type="color" value="#@Model.LabelTextColor.Name.Substring(2)" data-hex="true" onchange="ChangeLabelTextColor((this).value)" /><br />*@
    <input id="labelColorPicker" class="colorPickerInput" type="color" value="@Model.LabelTextColor" name="LabelTextColor" data-hex="true" onchange="ChangeLabelTextColor((this).value)" /><br />
</div>
<br>

<!--Value text color picker-->
<div id="divValueTextColor" class="designItemBlock colorPickerBlock">
    <p class="labelInput labelInputDesign">
        <a data-toggle="tooltip" title="Выберите цвет значений полей из палитры цветов или введите hex код цвета (например #ffffff)">Цвет значений<span class="spanRed">*</span></a>
    </p>
    @*<input id="textColorPicker" class="colorPickerInput" type="color" value="#@Model.ValueTextColor.Name.Substring(2)" data-hex="true" onchange="ChangeValueTextColor((this).value)" /><br />*@
    <input id="textColorPicker" class="colorPickerInput" type="color" value="@Model.ValueTextColor" name="ValueTextColor" data-hex="true" onchange="ChangeValueTextColor((this).value)" /><br />
</div>
<br>

<!--Icon image input-->
<div id="divIconImage" class="designItemBlock">
    <p class="labelInput">
        <a data-toggle="tooltip" title="Изображение, которое будет отображаться рядом с push-сообщениями во время обновления карты. Обязательное для каждой карты.">Иконка<span class="spanRed">*</span></a>
    </p>
    <input class="customFile" type="file" id="iconImageInput" name="Icon" accept="image/*" />
    <div class="emerald-flat-button">Добавить...</div>
    <div class="blocker"></div>
    <div id="iconName" class="FileName">Файл не выбран</div>
    <div id="removeIcon" class="removeImage" data-toggle="tooltip" title="Удалить изображение">X</div>
    <input id="checkLoadIcon" type="hidden" value="true" />
    <br />
    <br />
</div>
<div id="divIconImagePass" class="iconImagePassBlock">
    <span>
        <img id="iconImage" class="spanIconImagePass" src="@Url.Action("GetImage", "PassDesigner", new { path = Model.TemplatePath, imageName = "icon.png" })" />
    </span>
    <br/>
</div>
<div style="color: #DBDBDB;">-------------------------------------------------------------------------------------------------------</div>

<!--Logo image input-->
<div id="divLogoImage" class="designItemBlock">
    <p class="labelInput">
        <a data-toggle="tooltip" title="Логотип вашей компании">Логотип</a>
    </p>
    <input class="customFile" type="file" id="logoImageInput" name="Logo" accept="image/*" />
    <div class="emerald-flat-button">Добавить...</div>
    <div class="blocker"></div>
    <div id="logoName" class="FileName">Файл не выбран</div>
    <div id="removeLogo" class="removeImage" data-toggle="tooltip" title="Удалить изображение">X</div>
    <input id="checkRemoveLogo" type="hidden" name="RemoveLogo" value="false" />
    <br />
    <br />
</div>

<!--Strip image input-->
<div id="divStripImage" class="designItemBlock">
    <p class="labelInput">
        <a data-toggle="tooltip" title="Изображение, которое будет отображено за основными полями на передней части пасса" style="z-index:4;">Лента</a>
    </p>
    <input class="customFile" type="file" id="stripImageInput" name="Strip" accept="image/*" />
    <div class="emerald-flat-button">Добавить...</div>
    <div class="blocker"></div>
    <div id="stripName" class="FileName">Файл не выбран</div>
    <div id="removeStrip" class="removeImage" data-toggle="tooltip" title="Удалить изображение">X</div>
    <input id="checkRemoveStrip" type="hidden" name="RemoveStrip" value="false" />
    <br />
    <br />
</div>


<!--Background image input-->
<div id="divBackgroundImage" class="designItemBlock">
    <p class="labelInput">
        <a data-toggle="tooltip" title="Изображение, которое будет обображено как фон передней части пасса" style="z-index:4;">Фон</a>
    </p>
    <input class="customFile" type="file" id="backgroundImageInput" name="Background" accept="image/*" />
    <div class="emerald-flat-button">Добавить...</div>
    <div class="blocker"></div>
    <div id="backgroundName" class="FileName">Файл не выбран</div>
    <div id="removeBackground" class="removeImage" data-toggle="tooltip" title="Удалить изображение">X</div>
    <input id="checkRemoveBackground" type="hidden" name="RemoveBackground" value="false" />
    <br />
    <br />
</div>

<!--Thumbnail image input-->
<div id="divThumbnailImage" class="designItemBlock">
    <p class="labelInput">
        <a data-toggle="tooltip" title="Дополнительное изображение на передней части пасса. Например, на карте клиента это может быть фото держателя карты" style="z-index:4;">Миниатюра</a>
    </p>
    <input class="customFile" type="file" id="thumbnailImageInput" name="Thumbnail" accept="image/*" />
    <div class="emerald-flat-button">Добавить...</div>
    <div class="blocker"></div>
    <div id="thumbnailName" class="FileName">Файл не выбран</div>
    <div id="removeThumbnail" class="removeImage" data-toggle="tooltip" title="Удалить изображение">X</div>
    <input id="checkRemoveThumbnail" type="hidden" name="RemoveThumbnail" value="false" />
    <br />
    <br />
</div>

<!--Footer image input-->
<div id="divFooterImage" class="designItemBlock">
    <p class="labelInput">
        <a data-toggle="tooltip" title="Изображение, которое будет отображено около штрих-кода">Колонтитул</a>
    </p>
    <input class="customFile" type="file" id="footerImageInput" name="Footer" accept="image/*" />
    <div class="emerald-flat-button">Добавить...</div>
    <div class="blocker"></div>
    <div id="footerName" class="FileName">Файл не выбран</div>
    <div id="removeFooter" class="removeImage" data-toggle="tooltip" title="Удалить изображение">X</div>
    <input id="checkRemoveFooter" type="hidden" name="RemoveFooter" value="false" />
    <br />
    <br />
</div>