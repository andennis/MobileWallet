@model BaseViewModel

@{
    Layout = "~/Views/Shared/_LayoutDetails.cshtml";
}

@section Title
{
    Edit @Model.DisplayName
}

@RenderBody()

@section Actions
{
    @Html.FormActionSubmit("buttonSave", "Save")
    @Html.FormActionButton("buttonCancel", "Cancel", !string.IsNullOrEmpty(Model.RedirectUrl) ? Model.RedirectUrl : Url.Action("Index"))
}
