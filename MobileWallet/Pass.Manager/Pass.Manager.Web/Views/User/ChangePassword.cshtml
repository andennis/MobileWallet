 @model UserPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Edit @Model.DisplayName</h3>
@Html.ValidationSummary()
@using (Html.BeginFormExt())
{
    @Html.AntiForgeryToken()
    <div class="container">
        @Html.HiddenForExt(m => m.UserId)
        @Html.TextBoxFormForExt(m => m.Password)
        @Html.TextBoxFormForExt(m => m.ConfirmPassword)
        
        <div class="form-group">
            <button type="submit" class="btn btn-default btn-primary">Save</button>
            @Html.ActionLinkExt("Cancel", "Index", htmlAttributes: new { @class = "btn btn-default" })
        </div>
    </div>
}
