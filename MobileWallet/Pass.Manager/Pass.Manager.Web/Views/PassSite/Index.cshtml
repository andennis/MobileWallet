@model PassSiteViewModel

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="container">
    <table id="myDataTable" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Company name</th>
                <th>Address</th>
                <th>Town</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "AjaxHandler",
                "bProcessing": true,
                "aoColumns": [
                                {
                                    "sName": "ID",
                                    "bSearchable": false,
                                    "bSortable": false,
                                    "fnRender": function (oObj) {
                                        return '<a href=\"Details/' +
                                        oObj.aData[0] + '\">View</a>';
                                    }
                                },
                                { "sName": "COMPANY_NAME" },
                                { "sName": "ADDRESS" },
                                { "sName": "TOWN" }
                ]
            });
        })
    </script>
}
