@(Html.Grid<PassSiteViewModel>()
    .Name("grdPassSites")
    .CssClass("pm-grid")
    .Pageable()
    .DataSource(ds => ds.Read(@Url.Action("GridSearch")))
    .Columns(c =>
                {
                    c.Bound(p => p.PassSiteId).Title("ID").Width("100px");
                    c.BoundLink(p => p.Name, Url.Action("Edit"), id => id.PassSiteId);
                    c.Bound(p => p.Description);
                    c.Bound(p => p.PassSiteId).Title("Action").GridAjaxAction("Delete", Url.Action("Delete"));
                }))

